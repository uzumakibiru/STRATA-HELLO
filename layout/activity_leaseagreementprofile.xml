<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".leaseagreementprofile">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:clickable="true"
        android:background="@drawable/username"
        android:id="@+id/mainImageView"
        android:onClick="ChooseImage"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:inputType="text"
        android:id="@+id/mainName"
        android:autoText="true"
        android:backgroundTint="@color/colorPrimary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="@android:color/black"
        android:inputType="textEmailAddress"
        android:layout_margin="10dp"
        android:id="@+id/mainEmail"
        android:autoText="true"
        android:backgroundTint="@color/colorPrimary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Building No."
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:inputType="number"
        android:id="@+id/mainBuilding"
        android:autoText="true"
        android:backgroundTint="@color/colorPrimary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unit No."
        android:textColor="@android:color/black"
        android:inputType="number"
        android:layout_margin="10dp"
        android:id="@+id/mainUnit"
        android:autoText="true"
        android:backgroundTint="@color/colorPrimary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lease Start Date"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:inputType="date"
        android:id="@+id/mainLeaseStartDate"
        android:autoText="true"
        android:backgroundTint="@color/colorPrimary"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lease End Date"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:id="@+id/mainLeaseEndDate"
        android:inputType="date"
        android:autoText="true"
        android:backgroundTint="@color/colorPrimary"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/mainSave"
        android:layout_margin="10dp"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="invisible"
        android:id="@+id/mainSaveProgressBar"/>

</LinearLayout>